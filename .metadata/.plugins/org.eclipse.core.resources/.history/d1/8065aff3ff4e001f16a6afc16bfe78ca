package com.monocept.myapp.service;

import java.io.File;
import java.io.IOException;
import java.nio.file.Files;
import java.nio.file.Path;
import java.nio.file.StandardCopyOption;

import org.springframework.stereotype.Service;
import org.springframework.web.multipart.MultipartFile;
import org.springframework.core.io.FileSystemResource;
import org.springframework.core.io.Resource;

@Service
public class FileService {
	private final String output_directory="D:\\database for file uploads";
	
	public boolean uploadFile(MultipartFile file) throws IOException {
		boolean f=false;
		Files.copy(file.getInputStream(), Path.of(output_directory+"\\"+file.getOriginalFilename()), StandardCopyOption.REPLACE_EXISTING);
		f=true;
		
		return f;
	}

	public Resource downloadFile(String fileName) throws IOException {
		File file= new File(output_directory + "\\" + fileName);
		if(!file.exists()) {
			throw new IOException("File not found");
		}
		return new FileSystemResource(file);
	}
}
