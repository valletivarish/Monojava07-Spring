package com.monocept.myapp.service;

import java.util.List;

import org.springframework.http.HttpStatusCode;

import com.monocept.myapp.dto.EmployeeDTO;
import com.monocept.myapp.entity.Employee;

import jakarta.validation.Valid;

public interface EmployeeService {

	List<EmployeeDTO> getAllEmployees();

	EmployeeDTO getEmployeeById(int id);

	EmployeeDTO saveAndUpdateEmployee(@Valid EmployeeDTO employeeDTO);

	void deleteEmployee(int id);

	Employee getEmployeeByName(String name);

	List<Employee> getEmployeeByActiveTrue();
	
	List<Employee> getEmployeeByActiveFalse();

	Employee getEmployeeByEmail(String email);

	List<Employee> getEmployeeNameStartingWith(String prefix);

	List<Employee> getEmployeeSalaryGreaterThanAndDepartment(double salary, String designation);

	List<Employee> getEmployeeSalaryBetween(Double startSalary, Double endSalary);

	int getEmployeeCountAndActive();

	int getEmployeeCountAndDesignation(String designation);

	int countSalaryGreaterthan(double salary);

}
